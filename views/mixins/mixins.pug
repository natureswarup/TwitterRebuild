mixin createChatImage(chatData, userLoggedIn)
    if(!chatData)
        return 

    - let i = 0
    - let maxImagesToShow = 2
    - let remainingUsers = chatData.users.length - maxImagesToShow
    - remainingUser-- // remove 1 since we wont show our own image
    
    .chatImagesContainer 
        if remainingUsers > 0 
            .userCount 
                span +#{remainingUsers}
        each user in chatData.users 
            if chatData.users.length != 1 && user._id == userLoggedIn._id 
                - continue
            else if i >= maxImagesToShow 
                - break

            img(src=user.profilePic, alt="Users Profile Picture", title=user.firstName)
            - i++

